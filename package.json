{
  "private": true,
  "name": "dumi-app",
  "scripts": {
	"clean": "rimraf dist",
    "start": "dumi dev",
    "build": "dumi build",
	"postbuild": "echo milimili.online > dist/CNAME",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  },
  
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "dumi": "^1.0.12",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "yorkie": "^2.0.0"
  },
  "dependencies": {
    "gh-pages": "^3.1.0"
  }
}
